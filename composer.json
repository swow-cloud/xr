{
    "name": "swow-cloud/xr",
    "description": "Lightweight debug server utility.",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Rodolfo Berrios",
            "email": "rodolfo@chevere.org",
            "homepage": "https://chevere.org"
        }
    ],
    "require": {
        "php": ">=8.0",
        "chevere/chevere": "^0.3",
        "chevere/var-dump": "^0.1",
        "swow-cloud/trace": "0.1.x-dev",
        "swow-cloud/throwable-handler": "0.1.x-dev",
        "rodber/php-sse-react": "^0.1",
        "samejack/php-argv": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symplify/easy-coding-standard": "^9.4"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Chevere\\Xr\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "version": "dev-master"
}
